{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "default_locale": "en",
  "version": "1.8.1",

  "description": "__MSG_extensionDescription__",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },

  "applications": {
    "gecko": {
      "id": "video-bg-play@timdream.org",
      "strict_min_version": "58.0"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*",
                  "*://*.youtube-nocookie.com/*",
                  "*://*.vimeo.com/*",
                  "*://*.instagram.com/*"],
      "js": ["video-bg-play-content.js"],
      "all_frames": true
    }
  ]
}
